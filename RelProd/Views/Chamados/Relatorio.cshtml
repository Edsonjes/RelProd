@model IEnumerable< RelProd.Models.Chamados>

@{
	ViewData["Title"] = "Relátorio";
}

<h1>@ViewData["Title"]</h1>


<div class="row" style="width:auto;">
	<div class="col-md-4" style="width:auto;">

		<form asp-action="Relatorio" class="navbar-for navbar-left" role="search">
			<div class="form-group">
				<label class="control-label" for="minDate">De</label>
				<input type="date" class="form-control" name="minDate" />
			</div>
			<div class="form-group">

			</div>
			<div class="form-group" style="margin-left:400px; margin-top:-86px">
				<label class="control-label" for="maxDate"> Até</label>
				<input type="date" class="form-control" name="maxDate" style="width:350px;" />
			</div>
			<input type="submit" value="Gerar" class="btn btn-primary" />
			
			<div class="form-group" style="margin-top:10px;">
				<label class="control-label" for="minDate"></label>
				<label class="control-label" for="maxDate"> </label>
				<input type="submit"  value="Exportar Excel" class="btn btn-primary" />
			</div>
		</form>


		<div class="panel-body" style=" margin-top:20px; width:1024px;">

			<div class="panel-title">
				<h3 class="panel-title"> Total chamados: @Model.Count()</h3>
			</div>


			<table class="table table-striped table-hover">
				<thead>
					<tr>
						<th>
							@Html.DisplayNameFor(model => model.Solicitante)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Hora)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Data)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Setor)
						</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>
								@Html.DisplayFor(ModelItem => item.Solicitante)
							</td>
							<td>
								@Html.DisplayFor(ModelItem => item.Hora)
							</td>
							<td>
								@Html.DisplayFor(ModelItem => item.Data)
							</td>
							<td>
								@Html.DisplayFor(ModelItem => item.Setor)
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
		
		
		<div >

		</div>
	</div>
	</div>
</div>

